{
    "name": "ThijsFeryn/PDOMocker",
    "description": "A PDO mocking framework for PHPUnit",
    "type": "library",
    "keywords": [
        "phpunit",
        "pdo",
        "mocking",
        "mock",
        "testing"
    ],
    "homepage": "https://github.com/ThijsFeryn/PDOMocker",
    "authors": [
        {
            "name": "Thijs Feryn",
            "email": "thijs@feryn.eu",
            "role": "lead"
        }
    ],
    "support": {
        "issues": "https://github.com/ThijsFeryn/PDOMocker/issues"
    },
    "minimum-stability": "dev",
    "require": {
        "php": ">=5.4.0",
        "phpunit/phpunit-mock-objects": "~2.3"
